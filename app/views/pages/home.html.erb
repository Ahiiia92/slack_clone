<div class="container">
  <div class="row">
    <div class="col-12" style="margin: auto; margin-top: 5rem; margin-bottom: 5rem;">
      <h1>Chats</h1>
      <p>All chats:</p>

      <ul>
        <% @chatrooms.each do |chatroom| %>
        <%= link_to chatroom_path(chatroom) do %>
        <li>
          <div class="card-chatroom">
            <h3><%= chatroom.name %></h3>
          </div>
        </li>
        <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>


